@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Quiron Loja Virtual</title>

    @Styles.Render("~/Content/css");
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

</head>
<body>
    
    <div class="navbar navbar-inverse" role="navigation">
        <a class="navbar navbar-brand" href="#">Quiron Loja Virtual - Seu esporte é aqui</a>
        @Html.Action("Resumo","Carrinho")
    </div>

    <div class="row panel">
        <div id="categorias" class="col-xs-3">
            @Html.Action("Menu", "Categoria");
        </div>

        <div id="" class="col-xs-8">
            @RenderBody()
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    @RenderSection("scripts", required: false);
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>