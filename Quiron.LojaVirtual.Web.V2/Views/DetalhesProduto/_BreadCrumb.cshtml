@model Quiron.LojaVirtual.Dominio.Dto.BreadCrumbDto

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("ObterProdutosPorGrupo", "Nav",
                new { id = Model.GrupoCodigo, grupo = Model.GrupoDescricao })">@Model.GrupoDescricao</a>
    </li>
    <li class="breadcrumb-item">
        <a href="@Url.Action("ObterProdutosPorMarca", "Nav",
        new { id = Model.MarcaCodigo, grupo = Model.MarcaDescricao })">@Model.MarcaDescricao</a>
    </li>
    <li class="breadcrumb-item">
        <a href="@Url.Action("ObterProdutosPorGenero", "Nav",
        new { id = Model.GeneroCodigo, grupo = Model.GeneroDescricao })">@Model.GeneroDescricao</a>
    </li>
    <li class="breadcrumb-item">
        <a href="@Url.Action("ObterProdutosPorCategoria", "Nav",
        new { id = Model.CategoriaCodigo, grupo = Model.CategoriaDescricao })">@Model.CategoriaDescricao</a>
    </li>
    <li class="breadcrumb-item active">
        @Model.ProdutoDescricao
    </li>
</ol>
